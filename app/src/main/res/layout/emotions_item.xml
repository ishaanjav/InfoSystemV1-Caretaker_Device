<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="#cde7f9">

    <ImageView
        android:id="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_width="110dp"
        android:layout_height="140dp" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_toRightOf="@id/imageView"
        android:fontFamily="@font/rsemibold"
        android:textColor="#0132a5"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/time"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imageView"
        android:fontFamily="@font/rsemibold"
        android:text="Emotions:"
        android:textColor="#0132a5"
        android:textSize="21dp" />

    <TextView
        android:id="@+id/emotion1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/imageView"
        android:fontFamily="@font/rlight"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/emotion2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emotion1"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@id/imageView"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/rlight"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/emotion3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emotion2"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@id/imageView"
        android:fontFamily="@font/rlight"
        android:textSize="18dp" />


</RelativeLayout>